<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#d8d8d8" />
            <corners android:radius="7dp" />
        </shape>
    </item>
    <item android:bottom="3px">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/answer_bg_corner_radius" />
            <padding
                android:bottom="@dimen/answer_bg_padding"
                android:left="@dimen/answer_bg_padding"
                android:right="@dimen/answer_bg_padding"
                android:top="@dimen/answer_bg_padding" />
            <solid android:color="@color/colorAnswerAds" />
        </shape>
    </item>
</layer-list>
